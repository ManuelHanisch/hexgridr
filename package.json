{
  "name": "hexgridr",
  "version": "0.3.6",
  "description": "A library for creating and working with hexagonal grids. Supports pointy-top and flat-top orientations plus multiple grid layouts.",
  "main": "lib/HexGrid.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ManuelHanisch/hexgridr"
  },
  "scripts": {
    "makeSA:Hex": "browserify lib/Hex.js --standalone Hex > example/hex-sa-bundle.js",
    "makeSA:HexGrid": "browserify lib/HexGrid.js --standalone HexGrid > example/hexgrid-sa-bundle.js",

    "buildExample": "npm run makeSA:HexGrid && npm run makeSA:Hex",
    "build": "browserify lib/HexGrid.js  > dist/bundle.js"
  },
  "keywords": [
    "hexagonal",
    "grid",
    "hex",
    "hexgrid"
  ],
  "author": "Manuel Hanisch",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.1.0"
  }
}
